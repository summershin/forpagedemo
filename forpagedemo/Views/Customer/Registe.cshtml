

@{
    ViewData["Title"] = "Registe";
}

<body style="background-image:url(../img/bd36.jpg)">
    <div class="container-xxl bg-light p-0">
        <!-- Sign Up Start -->
        <div class="container-fluid" style="background-image:url(../img/bd38.jpg)">
            <div class="row h-100 align-items-center justify-content-center " style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    
                    <div class="card text-center bg-dark">
                        <br />
                        <div class="card-header bg-dark">
                            <h5 class="text-primary"><i class="fa fa-user-edit me-2"></i>創建IGO新帳號</h5>
                            <hr />
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <div class="card-img-top text-center">
                                    <img class="rounded rounded-circle me-lg-2" src="/img/UID_0.jpg" alt="/img/UID_0.jpg" style="width: 150px; height:150px;">
                                </div>
                            </div>
                            <br />
                            <form asp-action="Registe">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label class="control-label">姓</label>
                                    <input type="text" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label class="control-label">名</label>
                                    <input type="text" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label class="control-label">電話</label>
                                    <input type="text" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label class="control-label">密碼</label>
                                    <input type="text" class="form-control" />
                                </div>
                                <br />
                                <div class="form-group">
                                    <input type="submit" value="註冊" class="btn btn-primary" />
                                </div>
                                <br />
                                <a href="/Home/Login" class="btn btn-link">返回IGO登入頁面 !</a>
                                
                                @*======================================================================================>跳轉連結==========================================>*@
                            </form>
                        </div>
                    </div>
                    <hr />
                        <div class="card-footer text-muted bg-dark">
                            <h5 class="text-white">使用其他帳號註冊</h5>
                            <hr />
                            <div class="row g-4">
                                <div class="col-lg-4 col-md-4">
                                    <img class="rounded mx-auto d-block rounded-circle me-lg-2" src="/img/icon_FB.png" alt="icon" style="width: 55px; height:55px;">
                                </div>
                                <div class="col-lg-4 col-md-4">
                                    <img class="rounded mx-auto d-block rounded-circle me-lg-2" src="/img/icon_G.png" alt="icon" style="width: 55px; height:55px;">
                                </div>
                                <div class="col-lg-4 col-md-4">
                                    <img class="rounded mx-auto d-block rounded-circle me-lg-2" src="/img/icon_L.png" alt="icon" style="width: 55px; height:55px;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</body>
@*Bottom*@
<div class="container newsletter mt-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="row justify-content-center">
        <div @*class="col-lg-10 border rounded p-1"*@>
            <div @*class="border rounded text-center p-1"*@>
                <div class="bg-transparent rounded text-center p-5">
                    <h4 class="mb-4">@*Subscribe Our*@ <span class="text-primary text-uppercase">@*Newsletter*@</span></h4>
                    <div @*class="position-relative mx-auto"*@ style="max-width: 400px;">
                        @*<input class="form-control w-100 py-3 ps-4 pe-5" type="text" placeholder="Enter your email">
                            <button type="button" class="btn btn-primary py-2 px-3 position-absolute top-0 end-0 mt-2 me-2">Submit</button>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*Bottom*@


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
