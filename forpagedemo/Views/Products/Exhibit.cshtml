<div class="row" style="padding-top:1rem">
    <div class="row p-3">
        <div class="col-md-8 col-sm-12">
            <h3 class="fw-bold">普立茲新聞攝影獎80週年展</h3>
            <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" class="active" data-bs-target="#myCarousel" data-bs-slide-to="0"></button>
                    <button type="button" class="" data-bs-target="#myCarousel" data-bs-slide-to="1"></button>
                    <button type="button" class="" data-bs-target="#myCarousel" data-bs-slide-to="2"></button>
                    @*<button type="button" class="" data-bs-target="#myCarousel" data-bs-slide-to="3"></button>*@
                </div>
                <div class="carousel-inner bg-secondary">
                    <div class="carousel-item text-center active">
                        <img class="photo-fit" src="~/img/exhibit-1.jpg" />
                    </div>
                    <div class="carousel-item text-center">
                        <img class="photo-fit" src="~/img/exhibit-2.jpg" />
                    </div>
                    <div class="carousel-item text-center">
                        <img class="photo-fit" src="~/img/exhibit-3.jpg" />
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">上一張</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">下一張</span>
                </button>
            </div>
        </div>
        <div class="col-md-4 col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="m-3">
                        <span class="fw-bold">票種</span>
                        <input type="radio" class="btn-check" id="ticket1" name="ticket" value="1" data-price="350">
                        <label class="btn btn-outline-primary" for="ticket1">全票</label>
                        <input type="radio" class="btn-check" id="ticket2" name="ticket" value="2" data-price="300">
                        <label class="btn btn-outline-primary" for="ticket2">優待票</label>
                        <input type="radio" class="btn-check" id="ticket3" name="ticket" value="3" data-price="270">
                        <label class="btn btn-outline-primary" for="ticket3">預售票</label>
                        @*@foreach (var item in Model.Tickets)
                            {
                                <input type="radio" class="btn-check" id="ticket@(item.TicketAndProductId)" name="ticket" value="@item.TicketAndProductId" data-price="@item.Price">
                                <label class="btn btn-outline-primary" for="ticket@(item.TicketAndProductId)">@item.TicketName</label>
                            }*@
                    </div>
                    <div class="m-3">
                        <span class="fw-bold">日期</span>
                        <input type="date" class="form-control" />
                    </div>
                    <div class="m-3">
                        <span class="fw-bold">數量</span>
                        <input type="number" class="form-control" id="input-quantity" />
                    </div>
                    <div class="m-3">
                        <span class="fw-bold">價格</span>
                        <span id="lbl-price">TWD - 元</span>
                    </div>
                    <div class="m-3">
                        <button type="button" class="btn btn-primary" id="btn-add-cart">
                            <i class="bi bi-cart-plus"></i>
                            加入購物車
                        </button>

                        <button type="button" class="btn btn-outline-secondary" id="btn-collection">
                            <i class="bi bi-heart"></i>
                            加入收藏
                        </button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
